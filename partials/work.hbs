{{#if resume.work.length}}


\subsectioncustom{Experience}

\begin{flushleft}

{{#each resume.work}}
{
{{#if @last}}
\worksectionend
{{else}}
\worksection
{{/if}}
    {
    {{#if company}}
        {{company}}
    {{/if}}
    }
    {
    {{#if city}}
        {{city}}
    {{/if}}
    }
    {
    {{#if position}}
        {{position}}
    {{/if}}
    }
    {
    {{#if startDate}}
        {{dateFormat startDate format="MMM YYYY"}}
    {{/if}}
    {{#if endDate}}
        - {{dateFormat endDate format="MMM YYYY"}}
    {{else}}
        - Present
    {{/if}}
    }
    {
        \begin{itemize*}
        {
		    {{#if summary}}
                \item { {{summary}} }
		    {{/if}}
		    {{#if highlights.length}}
                {{#each highlights}}
                \item { {{.}} }
                {{/each}}
		    {{/if}}
        }
        \end{itemize*}
    }
}
{{/each}}

\end{flushleft}
{{/if}}

